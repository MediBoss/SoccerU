<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form method="POST" action="/sign-in">
      <legend>Login</legend>
      <div class="form-group">
        <label for="post-title">Email</label>
        <input type="text" name="email" class="form-control" id="user-name" placeholder="Username...">
      </div>
      <div class="form-group">
        <label for="post-url">Password</label>
        <input type="password" name="password" class="form-control" id="last-name" placeholder="Password...">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>
</div>